{
  "schema": {
    "docker_image_name": "flaskserver",
    "docker_container_alias": "server",
    "docker_mount_volumes": {
      "data/": "opt/data/"
    },
    "docker_port_mapping": {
      "5000": 5000
    },
    "docker_environment_variables": {
      "PORT": "5000"
    }
  },
  "components": {
    ".docker_image_name": {
      "default_value": "flaskserver",
      "max_length": 64,
      "must_not_contain": [ "[^\\w\\-_:]" ]
    },
    ".docker_container_alias": {
      "default_value": "server",
      "max_length": 64,
      "must_not_contain": [ "[^\\w\\-_]" ]
    },
    ".docker_mount_volumes": {
      "extra_fields": true
    },
    ".docker_port_mapping": {
      "extra_fields": true
    },
    ".docker_environment_variables": {
      "extra_fields": true
    },
    ".docker_mount_volumes.data/": {
      "required_field": false,
      "default_value": "opt/data/"
    },
    ".docker_port_mapping.5000": {
      "required_field": false,
      "integer_data": true,
      "default_value": 5000
    },
    ".docker_environment_variables.PORT": {
      "required_field": false,
      "default_value": "5000"
    }
  }
}